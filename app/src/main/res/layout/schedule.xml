<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:attr/selectableItemBackground"
    android:layout_marginLeft="@dimen/md_keylines"
    android:layout_marginRight="@dimen/md_keylines">

    <!--<ImageView-->
    <!--android:id="@+id/list_avatar"-->
    <!--android:layout_width="@dimen/avator_size"-->
    <!--android:layout_height="@dimen/avator_size"-->
    <!--android:scaleType="centerCrop"-->
    <!--tools:src="@drawable/a_avator" />-->

    <!--<ImageView-->
    <!--android:id="@+id/list_avatar"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="150dp"-->
    <!--android:scaleType="centerCrop"-->
    <!--tools:src="@drawable/material"-->
    <!--android:layout_marginBottom="10dp"/>-->

    <TextView
        android:id="@+id/hidden_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:gravity="center"
        android:text="hide"/>

    <TextView
        android:id="@+id/list_date"
        android:layout_width="60dp"
        android:layout_height="55dp"
        tools:text="Aug 15"
        android:gravity="center"
        android:padding="7dp"
        android:textSize="14dp"
        android:textColor="@color/primary"
        android:background="@drawable/schedule_bg"
        android:paddingLeft="@dimen/md_keylines"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/item_title"
        android:layout_toRightOf="@id/list_date"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="13dp"
        android:paddingRight="@dimen/md_keylines"
        android:layout_marginTop="10dp"
        android:paddingLeft="@dimen/md_keylines"/>

    <TextView
        android:id="@+id/list_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_title"
        android:layout_toRightOf="@id/list_date"
        android:textColor="#666"
        android:ellipsize="end"
        android:singleLine="true"
        tools:text="@string/item_desc"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="10dp"
        android:layout_marginLeft="@dimen/md_keylines"
        android:layout_marginRight="@dimen/md_keylines"/>

    <TextView
        android:id="@+id/list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_desc"
        android:text="8:00am - 5:00pm"
        android:layout_toRightOf="@id/list_date"
        android:layout_marginLeft="@dimen/md_keylines"
        android:layout_marginRight="@dimen/md_keylines"
        android:textColor="#9E9E9E"
        android:textSize="12dp"/>

    <TextView
        android:id="@+id/separator"
        android:background="#cccccc"
        android:layout_width = "fill_parent"
        android:layout_height="0.3dp"
        android:layout_below="@+id/list_date"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/md_keylines"
        android:layout_toRightOf="@id/list_date"/>
</RelativeLayout>
